<% content_for :title, "#{@title} - VCWiz" %>
<% content_for :description, @description %>
<% content_for :pack, 'vcwiz' %>
<% content_for :styles, 'vcwiz' %>
<% content_for :logrocket, 'r4gq3r/vcwiz-prod' %>

<% content_for :content do %>
  <% if @component_name.present? %>
    <%= react_server_component(@component_name, (@component_props || {}).merge(bodyHtml: yield(:body)), class: 'full-screen') %>
  <% else %>
    <%= yield %>
  <% end %>
<% end %>

<%= render template: 'layouts/external' %>