class IDPath {
  constructor(path) {
    this.path = path;
  }

  withID(id) {
    return this.path.replace('ID', id);
  }

  toString() {
    return this.withID('');
  }

  id(id) {
    return this.withID(id);
  }

  resource(id, resource) {
    return `${this.id(id)}/${resource}`;
  }
}

let idPath = function(path){
  return new IDPath(path);
};

